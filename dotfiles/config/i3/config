		urgent_workspace  	$urgent-bg-color   $urgent-bg-color   $text-color
	}
}

# move containder
bindsym $mod+bracketleft move container to output left
bindsym $mod+bracketright move container to output right
bindsym $mod+shift+bracketleft move workspace to output left
bindsym $mod+shift+bracketright move workspace to output right

#Lock, suspend, shutdown, reboot
set $Locker light-locker-command -l && sleep 1
set $mode_system System (l) lock, (e) logout, (s) suspend, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
# bind the shortcut
# Shortcut: Super+Pause Lock/Logout/Suspend/Reboot/Shutdown
bindsym $mod+Pause mode "$mode_system"

# The middle button over a titlebar kills the window
bindsym --release button2 kill

# The middle button and a modifer over any part of the window kills the window
bindsym --whole-window $mod+button2 kill

# Jump to urgent window
bindsym $mod+z [urgent=latest] focus

#i3 gaps
set $default_inner_gaps 4
set $default_outer_gaps 6
gaps inner $default_inner_gaps
gaps outer $default_outer_gaps
bindsym $mod+minus exec --no-startup-id i3-msg gaps inner all set 0 && i3-msg gaps outer all set 0
bindsym $mod+plus exec --no-startup-id i3-msg gaps inner all set $default_inner_gaps && i3-msg gaps outer all set $default_outer_gaps

# scratchpad
